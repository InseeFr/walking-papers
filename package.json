{
  "name": "orchestrateur-saisie-papier",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "_format": "prettier --ignore-unknown .",
    "format": "npm run _format -- --write",
    "format:check": "npm run _format -- --list-different",
    "prepare": "husky && vite-envs update-types"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@inseefr/lunatic": "^3.6.9",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.127.9",
    "@tanstack/react-router-devtools": "^1.127.9",
    "axios": "^1.13.1",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "oidc-spa": "^8.6.17",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.0",
    "tsafe": "^1.8.12",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-plugin": "^1.127.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.2",
    "nock": "^14.0.5",
    "orval": "^7.17.0",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-envs": "^4.6.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write --list-different"
    ],
    "!(*.js|*.jsx|*.ts|*.tsx)": "prettier --write --ignore-unknown --list-different"
  }
}
